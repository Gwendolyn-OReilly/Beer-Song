function main(n){

    for(let i = n; i >= 1; i--){
        
        console.log(`${i} bottles of beer on the wall,`);
        console.log(`${i} bottles of beer!`);
        console.log("take 1 down and pass it around,");
        console.log(`${i - 1} bottles of beer on the wall!`);
        
        if (i == 1){
            console.log("Go home, you're drunk!");
            
            
        }
}
}

main (99);
